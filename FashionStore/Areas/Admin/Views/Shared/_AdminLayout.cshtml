<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@ViewBag.Title</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Favicons Icon -->
    <link rel="icon" href="~/images/favi.ico" type="image/x-icon" />
    <link rel="shortcut icon" href="~/images/favi.ico" type="image/x-icon" />
    <link rel="icon" href="~/images/favi.ico" type="image/x-icon" />
    <!-- Bootstrap 3.3.6 -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <!-- Font Awesome -->
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <!-- Ionicons -->
    <link href="~/Areas/Admin/css/ionicons.min.css" rel="stylesheet" />
    <!-- jvectormap -->
    <link href="~/Areas/Admin/css/plugins/jquery-jvectormap-1.2.2.css" rel="stylesheet" />
    <!-- Theme style -->
    <link href="~/Areas/Admin/css/AdminLTE.css" rel="stylesheet" />
    <link href="~/Areas/Admin/css/skin/custom.css" rel="stylesheet" />
    <!-- AdminLTE Skins. Choose a skin from the css/skins
         folder instead of downloading all of them to reduce the load. -->
    <link href="~/Areas/Admin/css/skin/_all-skins.min.css" rel="stylesheet" />
    @RenderSection("styles_product", required: false)
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body class="hold-transition skin-blue sidebar-mini">
    <div class="wrapper">
        @RenderPage("~/Areas/Admin/Views/Shared/RenderPage/_Header.cshtml")
        @RenderPage("~/Areas/Admin/Views/Shared/RenderPage/_Sidebar.cshtml")
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            @RenderBody()
        </div>
        <!-- /.content-wrapper -->
        <footer class="main-footer">
            <div class="pull-right hidden-xs">
                <b>Version</b> 2.3.6
            </div>
            <strong>Copyright &copy; 2014-2016 <a href="http://almsaeedstudio.com">Almsaeed Studio</a>.</strong> All rights
            reserved.
        </footer>
        @RenderPage("~/Areas/Admin/Views/Shared/RenderPage/_ControlSidebar.cshtml")
    </div>
    <!-- ./wrapper -->
    <!-- jQuery 2.2.3 -->
    <script src="~/Scripts/jquery-3.1.0.min.js"></script>
    <!-- Bootstrap 3.3.6 -->
    <script src="~/Scripts/bootstrap.min.js"></script>
    <!-- FastClick -->
    <script src="~/Areas/Admin/js/plugins/fastclick.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/Areas/Admin/js/plugins/app.min.js"></script>
    <!-- Sparkline -->
    <script src="~/Areas/Admin/js/plugins/jquery.sparkline.min.js"></script>
    <!-- jvectormap -->
    <script src="~/Areas/Admin/js/plugins/jquery-jvectormap-world-mill-en.js"></script>
    <script src="~/Areas/Admin/js/plugins/jquery-jvectormap-1.2.2.min.js"></script>
    <!-- SlimScroll 1.3.0 -->
    <script src="~/Areas/Admin/js/plugins/jquery.slimscroll.min.js"></script>
    <!-- ChartJS 1.0.1 -->
    <script src="~/Areas/Admin/js/plugins/Chart.min.js"></script>
    <!-- AdminLTE dashboard demo (This is only for demo purposes) -->
    <script src="~/Areas/Admin/js/dashboard2.js"></script>
    <!-- AdminLTE for demo purposes -->
    <script src="~/Areas/Admin/js/plugins/demo.js"></script>
    <script src="~/Areas/Admin/js/plugins/ckeditor/ckeditor.js"></script>
    @RenderSection("script_product", required: false)
    @RenderSection("script_add", required: false)

    <script>
        $(function () {
            var pgurl = "/" + window.location.href.substr(window.location.href.indexOf(window.location.host) + window.location.host.length + 1);
            $("ul li a").each(function () {
                if ($(this).attr("href").toLowerCase() == pgurl.toLowerCase() || $(this).attr("href") == '') {
                    $(this).parent().parent().parent().addClass("active");
                    $(this).parent().addClass("active");
                }
            })
        });

    </script>
</body>
</html>
