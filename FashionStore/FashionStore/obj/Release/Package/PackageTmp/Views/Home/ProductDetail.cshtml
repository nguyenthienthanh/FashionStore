                                                <th>Kiểu dáng</th>
                                                <td>
                                                    <div class="rating-box">
                                                        <div class="rating" style="width:80%;"></div>
                                                    </div>
                                                </td>
                                            </tr>
                                            <tr>
                                                <th>Giá</th>
                                                <td>
                                                    <div class="rating-box">
                                                        <div class="rating" style="width:70%;"></div>
                                                    </div>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                    <div class="review">
                                        <h6><a href="#/catalog/product/view/id/61/">Tốt</a></h6>
